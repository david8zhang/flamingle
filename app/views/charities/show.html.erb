<h1><%= @charity.name %></h1> <em>Total Amount Raised: </em> $<%= @total_donations %>
<br>
<% @charity.donations.each do |d| %>
    <% if d.user == nil %>
        Anonymous donated $ <%= d.amount %>
    <% else %>
        <b><%= d.user.email[0..d.user.email.index('@')-1] %></b> donated $<%= d.amount %>
    <% end %>
    <br>
<% end %>

<div class="row">
    <%= render 'donations/new' %>
</div>
<div class="row">
  <div>
    <%= render 'donations/index', donations: @donations %>
  </div>
</div>
